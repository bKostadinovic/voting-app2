<!DOCTYPE html>
<html>
<head>
  <title><%= poll.question %></title>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
  <h1><%= poll.question %></h1>

  <!-- Vote Form -->
  <form action="/vote/<%= poll.id %>" method="POST">
    <% poll.options.forEach(opt => { %>
      <label>
        <input type="radio" name="option" value="<%= opt.text %>" required>
        <%= opt.text %>
      </label><br>
    <% }) %>
    <button type="submit">Vote</button>
  </form>

  <% if (user) { %>
    <form action="/polls/<%= poll.id %>/add-option" method="POST">
      <input type="text" name="newOption" placeholder="Add new option" required>
      <button type="submit">Add</button>
    </form>
  <% } %>

  <% if (user === poll.createdBy) { %>
    <form action="/polls/<%= poll.id %>/delete" method="POST">
      <button type="submit">Delete Poll</button>
    </form>
  <% } %>

  <canvas id="chart" width="600" height="400"></canvas>

  <script>
    const labels = - labels ;
    const votes = - votes ;

    const ctx = document.getElementById('chart').getContext('2d');
    new Chart(ctx, {
      type: 'bar',
      data: {
        labels: labels,
        datasets: [{
          label: 'Votes',
          data: votes,
          backgroundColor: 'rgba(54, 162, 235, 0.5)',
          borderColor: 'rgba(54, 162, 235, 1)',
          borderWidth: 1
        }]
      },
      options: {
        responsive: true,
        scales: {
          y: {
            beginAtZero: true
          }
        }
      }
    });
  </script>
</body>
</html>
